{
  "name": "falco",
  "description": "Node-Webkit + Twitter experiment",
  "version": "1.0.0",
  "keywords": [
    "twitter"
  ],
  "maintainers": [
    {
      "name": "Pat Cavit",
      "email": "pcavit@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tivac/falco.git"
  },
  "main": "src/index.html",
  "node-main": "./src/lib/state.js",
  "dependencies": {
    "debounce": "^1.0.0",
    "mithril": "git://github.com/lhorie/mithril.js.git#components",
    "moment": "^2.9.0",
    "purecss": "^0.6.0",
    "rc": "^1.0.1",
    "seamless-immutable": "^2.3.0",
    "twemoji": "^1.2.0",
    "twitter": "^1.0.3",
    "twitter-text": "^1.11.0"
  },
  "devDependencies": {
    "nw": "^0.12.1"
  },
  "scripts": {
    "start": "nw",
    "debug": "nw --debug"
  },
  "window": {
    "title": "Falco",
    "show": false,
    "min_width": 500,
    "min_height": 550
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "curly": 2,
      "dot-notation": 2,
      "key-spacing": [ 2, { "align": "value "} ],
      "no-caller": 2,
      "no-constant-condition": 2,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-empty": 2,
      "no-eval": 2,
      "no-ex-assign": 2,
      "no-extend-native": 2,
      "no-extra-parens": 2,
      "no-extra-semi": 2,
      "no-floating-decimal": 2,
      "no-func-assign": 2,
      "no-implied-eval": 2,
      "no-inner-declarations": 2,
      "no-multi-spaces": [2, { "exceptions": { "VariableDeclarator": true } }],
      "no-negated-in-lhs": 2,
      "no-obj-calls": 2,
      "no-sparse-arrays": 2,
      "no-trailing-spaces": 0,
      "no-unreachable": 2,
      "use-isnan": 2,
      "valid-typeof": 2
    }
  }
}
