{
  "name": "falco",
  "description": "Node-Webkit + Twitter experiment",
  "version": "1.0.0",
  "keywords": [
    "twitter"
  ],
  "maintainers": [
    {
      "name": "Pat Cavit",
      "email": "pcavit@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tivac/falco.git"
  },
  "main": "src/index.html",
  "node-main": "./src/state.js",
  "dependencies": {
    "debounce": "^1.0.0",
    "mithril": "git://github.com/lhorie/mithril.js.git#components",
    "moment": "^2.9.0",
    "purecss": "^0.6.0",
    "rc": "^1.0.1",
    "seamless-immutable": "^2.3.0",
    "twemoji": "^1.2.0",
    "twitter": "^1.0.3",
    "twitter-text": "^1.11.0"
  },
  "devDependencies": {
    "nw": "^0.12.1"
  },
  "scripts": {
    "start": "nw",
    "debug": "nw --debug"
  },
  "window": {
    "title": "Falco",
    "show": false,
    "min_width": 500,
    "min_height": 550
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "curly": true,
      "dot-notation": true,
      "no-caller": true,
      "no-constant-condition": true,
      "no-dupe-args": true,
      "no-dupe-keys": true,
      "no-duplicate-case": true,
      "no-empty": true,
      "no-eval": true,
      "no-ex-assign": true,
      "no-extend-native": true,
      "no-extra-parens": true,
      "no-extra-semi": true,
      "no-floating-decimal": true,
      "no-func-assign": true,
      "no-implied-eval": true,
      "no-inner-declarations": true,
      "no-negated-in-lhs": true,
      "no-obj-calls": true,
      "no-sparse-arrays": true,
      "no-unreachable": true,
      "use-isnan": true,
      "valid-typeof": true
    }
  }
}
