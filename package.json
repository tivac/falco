{
  "name": "falco",
  "description": "Electron-powered List-focused Twitter experiment",
  "version": "1.0.0",
  "keywords": [
    "twitter"
  ],
  "maintainers": [
    {
      "name": "Pat Cavit",
      "email": "pcavit@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tivac/falco.git"
  },
  "main": "./src",
  "dependencies": {
    "debounce": "^1.0.0",
    "delegated": "^1.0.0",
    "mithril": "git://github.com/lhorie/mithril.js.git#components",
    "moment": "^2.10.2",
    "node-inspector": "^0.9.2",
    "purecss": "^0.6.0",
    "rc": "^1.0.1",
    "seamless-immutable": "^2.3.0",
    "twemoji": "^1.4.1",
    "twitter": "^1.2.5",
    "twitter-text": "^1.12.0"
  },
  "devDependencies": {
    "electron-prebuilt": "^0.24.0"
  },
  "scripts": {
    "start": "node_modules\\electron-prebuilt\\dist\\electron.exe .",
    "debug": "node-inspector && electron --debug-brk=5858 ."
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true
    },
    "rules": {
      "curly": 2,
      "dot-notation": 2,
      "eol-last": 0,
      "key-spacing": [
        2,
        {
          "align": "value "
        }
      ],
      "no-caller": 2,
      "no-constant-condition": 2,
      "no-dupe-args": 2,
      "no-dupe-keys": 2,
      "no-duplicate-case": 2,
      "no-empty": 2,
      "no-eval": 2,
      "no-ex-assign": 2,
      "no-extend-native": 2,
      "no-extra-parens": 2,
      "no-extra-semi": 2,
      "no-floating-decimal": 2,
      "no-func-assign": 2,
      "no-implied-eval": 2,
      "no-inner-declarations": 2,
      "no-mixed-requires": 0,
      "no-multi-spaces": [
        2,
        {
          "exceptions": {
            "VariableDeclarator": true
          }
        }
      ],
      "no-negated-in-lhs": 2,
      "no-obj-calls": 2,
      "no-sparse-arrays": 2,
      "no-trailing-spaces": 0,
      "no-unreachable": 2,
      "use-isnan": 2,
      "valid-typeof": 2
    }
  }
}
